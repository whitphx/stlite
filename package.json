  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "cspell": "^8.19.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.2"
  },
  "resolutions": {
    "@types/react": "18.3.4"
  },
  "packageManager": "yarn@4.5.3"
}
