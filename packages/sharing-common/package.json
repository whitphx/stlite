{
  "name": "@stlite/sharing-common",
  "version": "0.75.0",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"yarn start:proto\" \"yarn start:ts\"",
    "build": "yarn build:proto && yarn build:ts",
    "start:ts": "tsc -w",
    "build:ts": "tsc",
    "test": "vitest",
    "build:proto": "protoc --ts_proto_out=. ./src/proto/*.proto --ts_proto_opt=esModuleInterop=true --ts_proto_opt=oneof=unions",
    "start:proto": "chokidar \"**/*.proto\" -c \"npm run build:proto\"",
    "fix:eslint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "fix:prettier": "prettier --write .",
    "check:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "check:prettier": "prettier --check ."
  },
  "dependencies": {
    "protobufjs": "^7.2.4"
  },
  "devDependencies": {
    "ts-proto": "^1.125.0"
  }
}
