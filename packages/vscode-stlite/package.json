{
  "name": "vscode-stlite",
  "displayName": "stlite",
  "publisher": "whitphx",
  "description": "",
  "license": "SEE LICENSE IN LICENSE",
  "version": "0.77.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/whitphx/stlite.git",
    "directory": "packages/vscode-stlite"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Streamlit"
  ],
  "icon": "images/icon.png",
  "sponsor": {
    "url": "https://github.com/sponsors/whitphx"
  },
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stlite.start",
        "title": "Launch Stlite preview"
      }
    ],
    "configuration": {
      "title": "Stlite (Streamlit)",
      "properties": {
        "stlite.targetFiles": {
          "type": "string",
          "default": "{*,*/*,*/*/*}",
          "description": "Glob pattern to match files to find and watch."
        },
        "stlite.ignoreFiles": {
          "type": "string",
          "default": "**/{.*,tests,dist,build,__pycache__}/**",
          "description": "Glob pattern to match files to ignore."
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "yarn run compile-web",
    "vscode:prepublish": "yarn run package-web",
    "compile-web": "yarn run check-types && node esbuild.js",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "yarn run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "fix:eslint": "eslint --fix src",
    "fix:prettier": "prettier --write .",
    "check:eslint": "eslint src",
    "check:prettier": "prettier --check .",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@stlite/common": "^0.77.0",
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.76.0",
    "@vscode/test-web": "^0.0.66",
    "@vscode/vsce": "^3.1.0",
    "assert": "^2.1.0",
    "esbuild": "^0.24.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "glob": "^11.0.0",
    "minimatch": "^10.0.1",
    "mocha": "^11.1.0"
  }
}
