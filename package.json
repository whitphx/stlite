{
  "private": true,
  "name": "stlite",
  "workspaces": [
    "packages/*",
    "streamlit/frontend",
    "streamlit/frontend/*",
    "packages/desktop/samples/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "husky",
