{
  "name": "Stlite",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": true,
      "version": "3.12.1"
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "make,protobuf-compiler,libprotobuf-dev"
    }
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  "forwardPorts": [3000, 3030],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": [
    "make init",
    "echo '\\nexport REACT_APP_SHARING_APP_URL=https://${CODESPACE_NAME}-3000.app.github.dev/' >> ~/.zshrc",
    "echo '\\nexport REACT_APP_SHARING_APP_URL=https://${CODESPACE_NAME}-3000.app.github.dev/' >> ~/.bashrc"
  ],

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"

  "hostRequirements": {
    "memory": "16gb",
    "storage": "16gb"
  }
}
