{
  "name": "@stlite/react",
  "version": "1.0.0",
  "type": "module",
  "description": "Stlite React library",
  "keywords": [
    "stlite",
    "streamlit",
    "pyodide",
    "webassembly",
    "wasm"
  ],
  "bugs": {
    "url": "https://github.com/whitphx/stlite/issues"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Yuichiro Tachibana (Tsuchiya)",
    "url": "https://www.whitphx.info/"
  },
  "files": [
    "build/**/*",
    "vite-plugin/dist/**/*"
  ],
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "import": {
        "types": "./build/stlite.d.ts",
        "default": "./build/stlite.js"
      }
    },
    "./vite-utils": {
      "development": "./src/vite-utils/index.ts",
      "import": {
        "types": "./build/vite-utils.d.ts",
        "default": "./build/vite-utils.js"
      }
    },
    "./stlite.css": "./build/stlite.css",
    "./vite-plugin": {
      "import": {
        "types": "./vite-plugin/dist/index.d.ts",
        "default": "./vite-plugin/dist/index.mjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whitphx/stlite.git",
    "directory": "packages/react"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.13.5",
    "@eslint/js": "^9.39.1",
    "@laynezh/vite-plugin-lib-assets": "^2.1.3",
    "@stlite/common": "workspace:^",
    "@stlite/devutils": "workspace:^",
    "@stlite/kernel": "workspace:^",
    "@streamlit/app": "workspace:^",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.1",
    "codedent": "^0.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^11.0.2",
    "sass": "^1.90.0",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-plugin-wasm": "^3.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15",
    "web-vitals": "^4.2.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "scripts": {
    "start": "vite",
    "build": "run-p 'build:*'",
    "build:lib": "tsc --noEmit && vite build",
    "build:vite-plugin": "cd vite-plugin && tsdown",
    "test": "vitest",
    "test:e2e": "yarn --cwd e2e-tests test",
    "test:e2e:headed": "yarn --cwd e2e-tests test:headed",
    "test:e2e:ui": "yarn --cwd e2e-tests test:ui",
    "test:e2e:update-snapshots": "yarn --cwd e2e-tests test:update-snapshots",
    "fix:eslint": "eslint --fix 'src/**/*.{ts,tsx}'",
    "fix:prettier": "prettier --write .",
    "check:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "check:prettier": "prettier --check ."
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
